#include "../extras/hfiles/cub3d.h"

void *ft_calloc(size_t size_of, size_t no_of_elem)
{
	unsigned int	i;
	char			*a;

	a = malloc(size_of * no_of_elem);
	i = 0;
	while (i < size_of * no_of_elem)
		a[i++] = '\0';
	return (a);
}
